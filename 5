#include <iostream>
using namespace std;

int EvenDigits(int n) {
    n = abs(n);
    if (n == 0)
        return 0;
    return (n % 10 % 2 == 0) + EvenDigits(n / 10);
}

int main() {
    int num;
    cout << "Enter a number: ";
    cin >> num;

    cout << "Number of even digits: " << EvenDigits(num) << endl;

    return 0;
}
