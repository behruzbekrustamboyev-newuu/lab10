#include <iostream>
using namespace std;

int reverseNumber(int num, int rev = 0) {
    if (num == 0)
        return rev;
    int digit = num % 10;
    return reverseNumber(num / 10, rev * 10 + digit);
}

int main() {
    int a;
    cout<<"Enter number" ;
    cin >> a;
    cout << reverseNumber(a);
    return 0;
}
